generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum SysRoleActions {
  CREATE
  READ
  UPDATE
  DELETE
}

enum Models {
  user
}

model SysRole {
  id                String           @unique @default(uuid())
  name              String
  description       String
  users             SysUser[]
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  sysRolePermission RolePermission[]
}

model RolePermission {
  user_role        SysRole           @relation(fields: [sysUserRoleId], references: [id], onDelete: Restrict)
  user_permissions SystemPermissions @relation(fields: [sysPermissions], references: [id])
  sysPermissions   String
  sysUserRoleId    String

  @@id([sysPermissions, sysUserRoleId])
}

model SystemPermissions {
  id                String           @unique @default(uuid())
  model             Models
  action            SysRoleActions
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  sysRolePermission RolePermission[]
}

model SysUser {
  id            String    @unique @default(uuid())
  name          String
  email         String    @unique
  phone         String?   @default("")
  password      String
  isActive      Boolean
  lastLogin     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sysUserRole   SysRole?  @relation(fields: [sysUserRoleId], references: [id], onDelete: Restrict)
  sysUserRoleId String?

  @@map("sys_user")
}
